<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="gavin.sensual.test.multi.Image" />

        <variable
            name="adapter"
            type="gavin.sensual.test.multi.ImageAdapter" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="@{() -> checkBox.performClick()}">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:imageUrl="@{item.path}"
            tools:ignore="contentDescription"
            tools:src="@color/colorAccent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="@{item.checked}"
            android:onCheckedChanged="@{(v, isChecked) -> adapter.onCheckedChanged(v, item, isChecked)}"
            android:visibility="@{item.count > 0 ? View.GONE : View.VISIBLE}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:background="@color/colorCoverSecondary"
            android:gravity="center_vertical"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:visibility="@{item.count > 0 ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{item.parent}"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@{String.valueOf(item.count)}"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>